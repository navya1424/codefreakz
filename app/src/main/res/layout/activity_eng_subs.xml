<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Your Year"
            android:textStyle="bold|italic"
            android:textSize="35sp"
            android:paddingLeft="65dp"
            android:paddingBottom="20dp"
            android:textColor="@color/colorRed"/>

        <Button
            android:id="@+id/firstYear"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="10dp"
            android:background="#FFA500"
            android:onClick="FirstYear"
            android:text="FIRST YEAR" />

        <Button

            android:id="@+id/SecondYear"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:background="#FFA500"
            android:onClick="SecondYear"
            android:text="SECOND YEAR" />

        <Button
            android:id="@+id/ThirdYear"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:background="#FFA500"
            android:onClick="ThirdYear"
            android:text="THIRD YEAR" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Some Important Subjective Notes for Placement"
            android:textAlignment="center"
            android:paddingLeft="10dp"
            android:textSize="20dp"
            android:paddingBottom="10dp"
            android:textStyle="bold|italic" />

        <Button


            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="30dp"
            android:background="#FFA500"
            android:onClick="OSNOTES"
            android:text="Operating System Notes" />

        <Button

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:background="#FFA500"
            android:onClick="SENOTES"
            android:text="Software Engineering Notes" />

        <Button

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:background="#FFA500"
            android:onClick="DBMSNOTES"
            android:text="DBMS Notes" />


        <Button

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:background="#FFA500"
            android:onClick="DBMSORACLENOTES"
            android:text="Oracle Database Notes" />
        <Button

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:background="#FFA500"
            android:onClick="LINUXNOTES"
            android:text="Linux Notes" />

    </LinearLayout>

</RelativeLayout>